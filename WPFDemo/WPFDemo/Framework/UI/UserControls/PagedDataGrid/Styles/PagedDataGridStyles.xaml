<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PageDataGridTextColumnElementStyle"
           TargetType="TextBlock">

        <Setter Property="FontSize" Value="23"/>
        <Setter Property="FontFamily" Value="Microsoft YaHei CN"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#021D46"/>
    
    </Style>
    <Style x:Key="PageDataGridTextColumnCellStyle"
           TargetType="DataGridCell">
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="0,0,0,10"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#021D46"/>
        <Setter Property="Background" Value="Red"/>
    </Style>
</ResourceDictionary>