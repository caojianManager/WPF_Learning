<UserControl x:Class="Framework.UI.UserControls.PagedDataGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Framework.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Framework/UI/UserControls/PagedDataGrid/Styles/PagedDataGridStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="上一页" Command="{Binding PreviousPageCommand}" />
               <TextBlock Text="{Binding CurrentPage}" Margin="5" />
               <TextBlock Text="/" Margin="2" />
               <TextBlock Text="{Binding TotalPages}" />
            <Button Content="下一页"  Command="{Binding NextPageCommand}" />
        </StackPanel>

        <!-- 数据表格 -->
        <DataGrid x:Name="pageDataGrid" AutoGenerateColumns="False"
                  ItemsSource="{Binding PagedItems}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Foreground="#021D46" FontSize="23" Binding="{Binding Id}" ElementStyle="{StaticResource PageDataGridTextColumnStyle}" CellStyle="{StaticResource PageDataGridTextColumnCellStyle}">

                </DataGridTextColumn>

                <DataGridTextColumn Header="Name" Binding="{Binding Name}"  ElementStyle="{StaticResource PageDataGridTextColumnStyle}" CellStyle="{StaticResource PageDataGridTextColumnCellStyle}">

                </DataGridTextColumn>

                <DataGridTextColumn Header="Age" Binding="{Binding Age}"  ElementStyle="{StaticResource PageDataGridTextColumnStyle}" CellStyle="{StaticResource PageDataGridTextColumnCellStyle}">

                </DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>
    </DockPanel>

</UserControl>
